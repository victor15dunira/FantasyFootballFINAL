@model IEnumerable<FantasyFootballWebLibrary.Models.Player>

@{ ViewData["Title"] = "Players"; }

<h1>@ViewBag.TeamName's Players</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PictureURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@item.PictureURL" style="height:128px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>


            <td>
                @Html.ActionLink("Edit", "Update","Players", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details","Players", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", "Players",new { id = item.ID })|

            </td>

        </tr>
        }
    </tbody>
</table>


