@model FantasyFootballWebLibrary.Models.Binding.AddPlayerBindingModel 

@{ ViewData["Title"] = "Create Player";
    
   
    }

<h1>Create New Player for @ViewBag.TeamName</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePlayer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="FirstName" class=" " control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class=" text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="LastName" class=" " control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class=" text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class=" text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class=" text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Players"> Back to All Players </a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}

